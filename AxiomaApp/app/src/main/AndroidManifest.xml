<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cjbensan.axiomaapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.TopicExerciseActivity"
            android:parentActivityName=".activity.UserSessionActivity"></activity>
        <activity
            android:name=".activity.TopicsActivity"
            android:parentActivityName=".activity.UserSessionActivity"></activity>
        <activity
            android:name=".activity.UserSessionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.UniversityActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SignUpLoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/StatusBarTransparent" />
        <activity
            android:name=".activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>