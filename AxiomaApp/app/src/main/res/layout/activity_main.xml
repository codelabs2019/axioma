<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="32dp"
    android:paddingEnd="32dp"
    android:paddingBottom="16dp"
    android:clipToPadding="false"
    android:background="#14294E"
    tools:context=".activity.MainActivity">

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_white"
        android:textColor="@color/colorRed"
        android:textSize="15sp"
        android:text="@string/login"/>

    <Button
        android:id="@+id/btn_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/btn_login"
        android:layout_marginTop="48dp"
        android:background="@drawable/button_red"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:text="@string/sign_up"/>

    <TextView
        android:id="@+id/txt_message_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_sign_up"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:text="@string/message_2"/>

    <TextView
        android:id="@+id/txt_message_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/txt_message_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:text="@string/message_1" />

    <ImageView
        android:id="@+id/img_axioma"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/txt_message_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:src="@drawable/logo_axioma"/>

    <ImageView
        android:id="@+id/img_rocket"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/img_axioma"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:src="@drawable/rocket"/>

</RelativeLayout>